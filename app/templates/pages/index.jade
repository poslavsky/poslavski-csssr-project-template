                    li.main-skills__item
                        input(id='checkbox-4' type='checkbox')
                        label(for='checkbox-4') HAML

                    li.main-skills__item
                        input(id='checkbox-5' type='checkbox')
                        label(for='checkbox-5') SASS

                    li.main-skills__item
                        input(id='checkbox-6' type='checkbox' checked)
                        label(for='checkbox-6') LESS

                    li.main-skills__item
                        input(id='checkbox-7' type='checkbox')
                        label(for='checkbox-7') CoffeeScript

